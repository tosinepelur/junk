#!/bin/bash
#
# Easy git push

source .pushpath
pun=`tput setaf 1`      #pun = red color.
roh=`tput setaf 2`      #roh = green color.
kol=`tput setaf 3`      #kol = yellow color.

clear
if [ ! -e ./.pushpath ]; then
touch .pushpath
echo "#!/bin/bash" > .pushpath
echo "$kol The following path will be remembered by the script."
echo "$pun Insert your path for the push: "
read filepath
tput sgr0

echo "path=$filepath" >> .pushpath
echo "$roh Path saved in ./.pushpath"
echo ""
echo ""
echo ""

echo -n "$roh Insert filename: "
echo "$roh $path"
read file
git add $file

echo "$kol Insert comment for the file"
echo -n "$kol Commit: "
read comm
git commit -m "$comm"

echo "$roh Insert repository"
echo -n "$roh Repository: "
read repo
tput setaf 3
git push -uf $repo master
tput sgr0 #return to original color.

else

echo "$roh Insert filename"
echo -n "$roh $path"
read file
git add $file

echo "$kol Insert comment for the file"
echo -n "$kol Commit: "
read comm
git commit -m "$comm"

echo "$roh Insert repository"
echo -n "$roh Repository: "
read repo
tput setaf 3
git push -uf $repo master
tput sgr0 #return to original color.

fi
tput setaf 2
echo "  _______ _                 _           __                       _               _   _     _                     _       _   _ "
echo " |__   __| |               | |         / _|                     (_)             | | | |   (_)                   (_)     | | | |"
echo "    | |  | |__   __ _ _ __ | | _____  | |_ ___  _ __   _   _ ___ _ _ __   __ _  | |_| |__  _ ___   ___  ___ _ __ _ _ __ | |_| |"
echo "    | |  | '_ \ / _` | '_ \| |/ / __| |  _/ _ \| '__| | | | / __| | '_ \ / _` | | __| '_ \| / __| / __|/ __| '__| | '_ \| __| |"
echo "    | |  | | | | (_| | | | |   <\__ \ | || (_) | |    | |_| \__ \ | | | | (_| | | |_| | | | \__ \ \__ \ (__| |  | | |_) | |_|_|"
echo "    |_|  |_| |_|\__,_|_| |_|_|\_\___/ |_| \___/|_|     \__,_|___/_|_| |_|\__, |  \__|_| |_|_|___/ |___/\___|_|  |_| .__/ \__(_)"
echo "                                                                          __/ |                                   | |          "
echo "                                                                         |___/                                    |_|          "
tput sgr0 #return to original color.
